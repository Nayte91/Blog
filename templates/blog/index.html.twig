{% extends "base.html.twig" %}

{% block title %}Blog {% endblock %}

{% block main %}
    <article>
        {% for post in posts %}
            <h2><a href="\blog\post\{{ post.id }}">{{ post.title|e }}</a></h2>
            <strong>By {{ post.author }} on {{ post.modificationdate|date('Y-m-d H:i:s') }}</strong>
            <p>{{ post.heading|e }}</p>
            <p><i><small>{{ post.comments }} commentaire{% if post.comments > 1 %}s{% endif %}</small></i></p>
            {%if user.admin %}
                <a href="\blog\edit\{{ post.id }}" class="btn text-success"><i>Editer...</i></a>
            {% endif %}
            <hr />
        {% endfor %}
    </article>
{% endblock %}

{% block section %}
    {%if user.admin %}
        <h5>Ajouter un billet</h5>
        <a href="\blog\add" class="btn"><i class="fas fa-4x fa-plus text-success" ></i></a>
    {% endif %}
{% endblock %}
